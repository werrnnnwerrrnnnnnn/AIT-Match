            <!-- Modify the ðŸ‘¥ button to go to match requests -->
            <%= link_to 'ðŸ‘¥', matches_requests_path, class: 'notification-bell' %>
            <div class="notification">
                <span class="notification-bell">ðŸ””</span>
                <span class="notification-count">3</span>
                <div class="notification-dropdown">
                    <p>John Doe liked your profile.</p>
                    <p>Jane Smith sent you a message.</p>
                    <p>Alice Johnson viewed your profile.</p>
                </div>
            </div>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, data: { turbo: false } %>
        </div>
    </nav>

<footer>
    <p>AIT Match Â© 2024</p>
</footer>

</body>
</html>