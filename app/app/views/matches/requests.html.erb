<!-- app/views/matches/requests.html.erb -->

<div class="main-content">
  <!-- Image above heading with wiggle effect -->
  <%= image_tag 'match-request-heading.png', alt: 'Explore Your Match Requests!', class: 'profile-create-header', style: 'width:100%; max-width:400px; display:block; margin:0 auto;' %>

  <% if @matches.any? %>
    <div class="match-requests">
      <% @matches.each do |match| %>
        <div class="request-card">
          <div class="request-details">
            <p><strong>@ <%= match.requestor.user_name %></strong></p>
            <p>Email: <%= match.requestor.user.email %></p>
          </div>
          <div class="request-actions">
            <%= button_to 'Accept', accept_match_path(match), method: :post, class: 'accept-btn' %>
            <%= button_to 'Decline', decline_match_path(match), method: :post, class: 'decline-btn' %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-match-requests">ã€° No pending match requests.</p>
  <% end %>
</div>

<!-- CSS Styling -->
<style>
  /* Main content wrapper with padding */
  .main-content {
    padding: 40px;
    margin-top: 50px;
    margin-bottom: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Profile header image styling with wiggle effect */
  .profile-create-header {
    display: block;
    margin: 0 auto 20px;
    width: 100%;
    max-width: 400px;
    cursor: pointer;
    transition: transform 0.2s ease-in-out;
  }

  .profile-create-header:hover {
    animation: wiggle 0.9s infinite;
  }

  /* Keyframes for the wiggle effect */
  @keyframes wiggle {
    0% { transform: translate(0, 0) rotate(0deg); }
    10% { transform: translate(-1px, 1px) rotate(-2deg); }
    20% { transform: translate(1px, -1px) rotate(2deg); }
    30% { transform: translate(-1px, -1px) rotate(-2deg); }
    40% { transform: translate(1px, 1px) rotate(2deg); }
    50% { transform: translate(-1px, 1px) rotate(-2deg); }
    60% { transform: translate(1px, -1px) rotate(2deg); }
    70% { transform: translate(-1px, -1px) rotate(-2deg); }
    80% { transform: translate(1px, 1px) rotate(2deg); }
    90% { transform: translate(-1px, 1px) rotate(-2deg); }
    100% { transform: translate(0, 0) rotate(0deg); }
  }

  .match-requests {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centers each request-card within this container */
    gap: 20px;
    margin-top: 40px;
    margin-bottom: 70px;
    width: 100%;
  }

  .request-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px; /* Controls maximum card width */
    width: 100%; /* Ensures card takes full width up to max-width */
    margin: 0 auto; /* Centers card if additional width constraints are applied */
  }

  .request-details p {
    font-size: 16px;
    color: #333;
    margin: 0;
  }

  .request-actions {
    display: flex;
    gap: 10px;
  }

  .accept-btn, .decline-btn {
    font-weight: bold;
    font-size: 14px;
    padding: 8px 15px;
    border-radius: 20px;
    cursor: pointer;
    text-decoration: none;
    color: #fff;
    border: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .accept-btn {
    background-color: #4CAF50;
    box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
  }

  .decline-btn {
    background-color: #FF5252;
    box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
  }

  .accept-btn:hover {
    background-color: #45a049;
    transform: translateY(-3px);
    box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
  }

  .decline-btn:hover {
    background-color: #ff3e3e;
    transform: translateY(-3px);
    box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
  }

  /* No match requests message styling */
  .no-match-requests {
    background-color: #F5F5F5;
    color: #B2B2B2;
    font-weight: bold;
    font-size: 15px;
    padding: 5px 15px;
    border-radius: 20px;
    cursor: default;
    display: inline-block;
    transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    margin: 20px auto;
    text-align: center;
  }
</style>