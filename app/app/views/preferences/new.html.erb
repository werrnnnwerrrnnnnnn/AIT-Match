    <div class="profile-section">
      <%= form.label :preferred_min_age, "Age Range" %>
      <div>
        <input type="range" id="ageRangeMin" name="preference[preferred_min_age]" min="18" max="100" value="18" step="1">
        <input type="range" id="ageRangeMax" name="preference[preferred_max_age]" min="18" max="100" value="100" step="1">
        <span id="ageRangeDisplay">18 - 100+</span>
